  <script>
      function calculateResult() {
          const scores = Array.from(document.querySelectorAll('input:checked'))
                             .map(el => parseInt(el.value));
          
          if (scores.length < 5) {
              alert('请回答所有问题！');
              return;
          }

          const total = scores.reduce((a,b) => a+b, 0);
          let tag, desc;
          
          if(total >= 400) {
              tag = "🔥人车合葬套餐";
              desc = "殡葬公司已推出SU7主题墓地";
          } else if(total >= 300) {
              tag = "💸破产锦鲤";
              desc = "将受邀参加《极限破产》真人秀录制";
          } else {
              tag = "🍵待割幼苗";
              desc = "恭喜获得小米金融年度优质韭菜勋章";
          }

          const result = document.getElementById('result');
          const resultText = document.getElementById('resultText');
          resultText.textContent = `☠️ 生存评级：【${tag}】\n${desc}`;
          result.classList.remove('hidden');
      }
  </script>
